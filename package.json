{
  "name": "innoq-styleguide",
  "version": "12.0.0",
  "description": "INNOQ's Styleguide and Component Library",
  "license": "SEE LICENSE IN <LICENSE.md>",
  "repository": {
    "type": "git",
    "url": "https://github.com/innoq/innoq-styleguide.git"
  },
  "scripts": {
    "start": "npm-run-all --parallel server-watch compile-watch",
    "server": "fractal-fork start",
    "server-watch": "nodemon -I -w components -w docs -e 'html' -x 'npm run server'",
    "compile": "faucet",
    "compile-watch": "npm run compile -- --watch",
    "test": "eslint --cache --ext .js . && stylelint --cache 'lib/**/*.scss' 'components/**/*.scss'",
    "site": "yarn run compile && fractal-fork build",
    "dist": "./scripts/dist",
    "release": "release-it"
  },
  "dependencies": {
    "classnames": "^2.2.6",
    "modularscale-sass": "^3.0.10",
    "postcss": "^8.4.5",
    "postcss-scss": "^4.0.3"
  },
  "devDependencies": {
    "fractal-fork": "^0.0.7",
    "eslint": "^8.9.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.0.0",
    "faucet-pipeline-js": "^2.1.6",
    "faucet-pipeline-sass": "^1.4.0",
    "faucet-pipeline-static": "^2.0.0",
    "nodemon": "^2.0.4",
    "normalize.css": "^8.0.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "release-it": "^15.0.0",
    "stylelint": "^14.1.0",
    "stylelint-config-idiomatic-order": "^9.0.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-sass-guidelines": "^9.0.1",
    "stylelint-config-standard": "^28.0.0"
  }
}
