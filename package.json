{
  "name": "innoq-styleguide",
  "version": "0.2.8",
  "description": "innoQ's Styleguide and Component Library",
  "license": "Copyright 2017 innoQ Deutschland GmbH",
  "repository": {
    "type": "git",
    "url": "https://github.com/innoq/innoq-styleguide.git"
  },
  "scripts": {
    "start": "npm-run-all --parallel server-watch compile-watch",
    "server": "fractal start",
    "server-watch": "fractal start --watch",
    "compile": "faucet --no-fingerprint",
    "compile-watch": "npm run compile -- --watch",
    "test": "eslint --cache . && sass-lint -v -q",
    "site": "yarn run compile && fractal build",
    "dist": "yarn run site && cp -r dist/site/css dist/ && echo $TRAVIS_COMMIT > dist/site/RELEASE.txt && cd dist && zip -r innoq-styleguide-$TRAVIS_TAG.zip css site && cd -"
  },
  "dependencies": {
    "normalize.css": "^7.0.0",
    "webfontloader": "^1.6.28"
  },
  "devDependencies": {
    "complate-fractal": "^0.4.0",
    "eslint": "^4.8.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-node": "^5.2.0",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^3.0.1",
    "faucet-pipeline-sass": "^0.7.0",
    "modularscale-sass": "^3.0.3",
    "nodemon": "^1.12.1",
    "npm-run-all": "^4.1.1",
    "release-it": "^4.1.0",
    "sass-lint": "^1.12.0",
    "webfontloader": "^1.6.28"
  }
}
